<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleLayout">
        <attr name="centerView" format="reference" />

        <attr name="angle" format="float" />
        <attr name="angleOffset" format="float" />

        <attr name="radius" format="dimension" />
        <attr name="radiusOverride">
            <enum name="fitsSmallestChild" value="0" />
            <enum name="fitsLargestChild" value="1" />
        </attr>
        <attr name="direction">
            <enum name="clockwise" value="-1" />
            <enum name="counterClockwise" value="1" />
        </attr>
    </declare-styleable>
</resources>